<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsk.backend3.mapper.StuMapper">

    <resultMap id="BaseResultMap" type="com.wsk.backend3.domain.Stu">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="trueName" column="true_name" jdbcType="VARCHAR"/>
            <result property="stuNum" column="stu_num" jdbcType="VARCHAR"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="role" column="role" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,true_name,stu_num,
        username,password,email,
        role
    </sql>
    <select id="findOneByUsername" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from stu
        where
        username = #{username,jdbcType=VARCHAR}
    </select>
</mapper>
